<h1>Show User</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.email %>
  </li>

  <li>
    <strong>Admin?:</strong>
    <%= @user.admin %>
  </li>

</ul>

<% if @current_user && @current_user.admin do %>
  <span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user), class: "btn btn-secondary" %></span>
<% end %>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
